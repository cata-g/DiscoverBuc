<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CardViewCardDesign"
    android:layout_width="250dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@color/pale_yellow"
        >

        <ImageView
            android:id="@+id/locationCard_cover"
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:src="@drawable/palatul_parlamentului"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/locationCard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textSize="20sp"
                android:fontFamily="@font/squada_one"
                android:textColor="@color/light_black"
                />

            <RatingBar
                android:id="@+id/locationCard_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="5"
                style="@style/Widget.AppCompat.RatingBar.Small"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_more"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="See More"
                android:textSize="18sp"
                android:fontFamily="@font/squada_one"
                android:textColor="@color/light_black"
                android:background="@drawable/button_background"
                />
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>