<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Common.Fragments.HomeRetailerFragment"
    android:background="@drawable/wallpapcustom"
    android:transitionName="transitionLogin"
    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/pale_yellow_transparent"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <FrameLayout
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_virus"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/casesText"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/light_black"
                            android:textSize="25sp"
                            android:text=""
                            android:gravity="center"
                            android:fontFamily="@font/squada_one"
                            android:layout_marginLeft="40dp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="125dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="25dp"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_termo"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/weatherText"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/light_black"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:fontFamily="@font/squada_one"
                            android:layout_marginLeft="40dp"
                            />
                    </FrameLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/roundedwithstroke"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/todaysRec"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:textColor="@color/light_black"
                        android:layout_gravity="center"
                        android:fontFamily="@font/squada_one"
                        android:layout_marginTop="20dp"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/todaysCover"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_marginTop="10dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/todaysTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:text=""
                                    android:textSize="25sp"
                                    android:fontFamily="@font/squada_one"
                                    android:textColor="@color/light_black"/>

                                <RatingBar
                                    android:id="@+id/todaysRating"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    />


                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/todaysMore"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="200dp"
                                    android:layout_height="40dp"
                                    android:text="See More"
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/squada_one"
                                    android:textColor="@color/light_black"
                                    android:background="@drawable/button_background"
                                    />

                            </LinearLayout>

                        </LinearLayout>


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/menu"
                            android:layout_gravity="bottom|end"
                            android:elevation="10dp"
                            android:scaleType="fitEnd"
                            android:layout_marginLeft="10dp"
                            />
                    </FrameLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/loadingbg"
                    android:elevation="10dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundedwithstroke">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/doctor"
                        />

                    <TextView
                        android:id="@+id/DailyAdvice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="@color/light_black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/squada_one"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/juststroke"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="@string/otherRec"
                            android:textSize="25sp"
                            android:textColor="@color/light_black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/squada_one"
                            android:layout_marginLeft="10dp"
                            />

                        <Button
                            android:id="@+id/details_otherrec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEE MORE"
                            android:layout_gravity="right"
                            android:background="#00000000"
                            android:textColor="@color/light_black"
                            android:fontFamily="@font/squada_one"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categories_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#00000000"
                        android:layout_marginTop="20dp"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

            </LinearLayout>



</ScrollView>