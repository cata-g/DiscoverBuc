<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CardViewCardDesign"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/pale_yellow"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/locationCard_cover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/palatul_parlamentului"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/locationCard_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:textColor="@color/light_black"
                    android:fontFamily="@font/squada_one"
                    android:textSize="20sp"
                    android:layout_gravity="left"/>

                <RatingBar
                    android:id="@+id/locationCard_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_more"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="See More"
                    android:textSize="18sp"
                    android:fontFamily="@font/squada_one"
                    android:textColor="@color/light_black"
                    android:background="@drawable/button_background"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/heart_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/empty_heart"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>