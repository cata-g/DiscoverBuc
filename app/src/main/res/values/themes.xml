<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiscoverBuc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/pale_yellow</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.DiscoverBuc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DiscoverBuc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DiscoverBuc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.DiscoverBuc.PopMe">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="roundedImageView" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>

    </style>

    <style name="ButtonStyle" parent="android:style/Widget.Button">
        <item name="cornerRadius">60dp</item>
        <item name="backgroundColor">@color/green</item>
    </style>
</resources>